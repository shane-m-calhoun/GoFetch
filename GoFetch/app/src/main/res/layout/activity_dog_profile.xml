<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="edu.western.cs.gofetch.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width=".5dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/profile_image"
                android:src="@drawable/kenai"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width=".5dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="100dp"
                android:text="Points:"
                android:id="@+id/profile_points"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_marginTop="45dp"
                android:id="@+id/profile_breed"
                android:layout_marginLeft="-100dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:text="Breed:"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_marginTop="70dp"
                android:id="@+id/profile_age"
                android:layout_marginLeft="-100dp"
                android:text="Age:"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="-100dp"
                android:id="@+id/profile_weight"
                android:layout_marginTop="100dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:text="Weight:"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:layout_width="120dp"
            android:layout_gravity="bottom"
            android:text="Weekly"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/profile_weekly_button"
            android:layout_height="50dp" />
        <Button
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:text="Monthly"
            android:id="@+id/profile_monthly_button"
            android:layout_gravity="bottom"
            android:layout_height="50dp" />
        <Button
            android:layout_width="120dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:text="Yearly"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/profile_yearly_button"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:layout_width="250dp"
            android:id="@+id/peofile_new_lesson_button"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:text="New Lesson"
            android:layout_gravity="bottom"
            android:layout_marginLeft="85dp"
            android:layout_height="50dp" />
        <Button
            android:layout_width="250dp"
            android:layout_marginLeft="-250dp"
            android:layout_gravity="center"
            android:id="@+id/profile_leader_board_button"
            android:text="Leader Board: Rank #"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="50dp" />

    </LinearLayout>


</LinearLayout>
