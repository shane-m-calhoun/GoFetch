<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NavSaveToHistory"
    tools:showIn="@layout/app_bar_nav_save_to_history">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:weightSum="4"
        tools:context="edu.western.cs.gofetch.account_related_activities.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:id="@+id/save_to_history_title"
                android:layout_height="100dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Spinner
                android:layout_width="200dp"
                android:id="@+id/save_history_spinner"
                android:layout_marginLeft="90dp"
                android:layout_height="50dp">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <ScrollView
                android:id="@+id/scroll1"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="300px"
                android:fillViewport="true">
                <TextView
                    android:layout_width="250dp"
                    android:textColor="@color/Black"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="60dp"
                    android:scrollbars="vertical"
                    android:textStyle="bold" />
            </ScrollView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:layout_width="200dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/save_history_button"
                android:textSize="35sp"
                android:textColor="@color/Black"
                android:text="Save"
                android:layout_height="75dp" />

        </LinearLayout>





    </LinearLayout>

</android.support.constraint.ConstraintLayout>